@model RecipeAssignment.Models.Recipe

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.css" />
    <!--<meta name="viewport" content="width=device-width" />-->
    <title>Add Recipe</title>
</head>
<body>
    <div>
        <nav class="navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Baking Recipes</a>
                </div>
                <center>
                    <a asp-action="Index">Home</a>
                    <a asp-action="InsertPage">Add Recipe</a>
                    <a asp-action="DataPage">View Recipes</a>
                </center>
            </div>
        </nav>
        <br />
        <form class="p-a-1" asp-action="InsertPage" method="post">
            <p>
                <div class="form-group">
                    <label asp-for="RecipeName">Recipe Name:</label>
                    <input class="form-control" asp-for="RecipeName" />
                </div>
            </p>
            <p>
                <div class="form-group">
                    <label asp-for="Directions">Directions:</label>
                    <input class="form-control" asp-for="Directions" />
                </div>
            </p>
            <p>
                <div class="form-group">
                    <label asp-for="Ingredients">Ingredients:</label>
                    <input class="form-control" asp-for="Ingredients" />
                </div>
            </p>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">Submit Recipe</button>
            </div>
        </form>
    </div>
</body>
</html>
   
